{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% if object.isCommitteeType() %}
        {{ object.zones|join(', ') }}
    {% elseif object.isCopolType() %}
        {% if object.referentTags|length > 1 %}
            1+
        {% else %}
            {{ object.referentTags|map(tag => tag.code)|join(', ') }}
        {% endif %}
    {% endif %}
{% endblock %}
