{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% if object.memberships.president %}
        {% set president = object.memberships.president.adherent %}
        <a href="{{ path('admin_app_adherent_show', {id: president.id}) }}">
            {{ president.fullName }}
        </a>
        <br />
        {{ president.emailAddress }}
        {% if president.phone %}
            <br />
            {{ president.phone|phone_number_format }}
        {% endif %}
    {% endif %}
{% endblock %}
