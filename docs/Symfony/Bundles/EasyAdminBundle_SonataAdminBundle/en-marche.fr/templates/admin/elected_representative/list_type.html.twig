{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% if object.isAdherent %}
        <span class="label label-success">Adh√©rent(e)</span><br />
    {% endif %}
    {% for userListDefinition in object.userListDefinitions %}
        {% set labelClass = 'label-primary' %}
        {% if userListDefinition.code == constant('App\\Entity\\UserListDefinitionEnum::CODE_ELECTED_REPRESENTATIVE_SUPPORTING_LA_REM') %}
            {% set labelClass = 'label-warning' %}
        {% elseif userListDefinition.code == constant('App\\Entity\\UserListDefinitionEnum::CODE_ELECTED_REPRESENTATIVE_INSTANCES_MEMBER') %}
            {% set labelClass = 'label-danger' %}
        {% endif %}
        <span class="label {{ labelClass }}">{{ userListDefinition.label }}</span><br />
    {% endfor %}
    {% for label in object.labels %}
        <span class="label label-default">{{ label }}</span>
    {% endfor %}
{% endblock %}
